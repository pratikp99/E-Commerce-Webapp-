    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        document.getElementById('rzp-button1').onclick = function (e) {
            e.preventDefault();
            var options = {
                "key": "your_razorpay_key_id", // Enter the Key ID generated from the Dashboard
                "amount": "<%= (totalPrice + 69) * 100 %>", // Amount is in paise (total amount in INR * 100)
                "currency": "INR",
                "name": "Your Store Name",
                "description": "Test Transaction",
                "image": "/your_logo_url",
                "order_id": "order_9A33XWu170gUtm", // Replace with order_id created in server-side
                "handler": function (response) {
                    document.getElementById('payment_id').value = response.razorpay_payment_id;
                    document.getElementById('checkout-form').submit(); // Submit the form
                },
                "prefill": {
                    "name": "<%=activeUser.getUserName()%>",
                    "email": "<%=activeUser.getUserEmail()%>",
                    "contact": "<%=activeUser.getUserPhone()%>"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#3399cc"
                }
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
        };
    </script>
    <%-- End of Razorpay Integration --%>

